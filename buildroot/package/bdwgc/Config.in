config BR2_PACKAGE_BDWGC_ARCH_SUPPORTS
	bool
	default y
	depends on BR2_aarch64 || BR2_arm || BR2_armeb || BR2_avr32 \
		|| BR2_i386 || BR2_m68k || BR2_mips || BR2_mipsel \
		|| BR2_powerpc || BR2_sh || BR2_sparc || BR2_x86_64

config BR2_PACKAGE_BDWGC
	bool "bdwgc"
	depends on BR2_PACKAGE_BDWGC_ARCH_SUPPORTS
	depends on BR2_PACKAGE_LIBATOMIC_ARCH_SUPPORTS
	select BR2_PACKAGE_LIBATOMIC_OPS
	help
	  The Boehm-Demers-Weiser conservative garbage collector can
	  be used as a garbage collecting replacement for C 'malloc'
	  or C++ 'new'. It allows you to allocate memory basically as
	  you normally would, without explicitly deallocating memory
	  that is no longer useful.

	  http://www.hboehm.info/gc/
